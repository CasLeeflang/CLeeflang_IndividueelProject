@model IEnumerable<Logic.Reservation.ReservationModel>;

<style>
    tr.spaceUnder > td {
        padding-bottom: 1em;
    }

    .ResevationContainer {
        background-color: rgb(0 100 0 / 0.30);
        height: 40px;
        margin-bottom: 10px;
        border-radius: 4px;

    }

    .ResDate, .ResBusiness, .ResStart, .ResEnd {
        margin-left: 2px;
    }
</style>

<h1>Reservations:</h1>

<div class="">
    <div class="row">
        <div class="ResDate col-2">
            Date:
        </div>

        <div class="ResBusiness col-2">
            Business:
        </div>

        <div class="ResStart col-2">
            Start Time:
        </div>

        <div class="ResEnd col-2">
            End Time:
        </div>
    </div>
</div>

@foreach (var reservation in Model)
{

    <div class="ResevationContainer">
        <div class="row">
            <div class="ResDate col-lg-2 col-sm-1">
                @reservation.Date.ToString("dd/MM/yyyy")
            </div>

            <div class="ResBusiness col-lg-2 col-sm-1">
                @reservation.BusinessName
            </div>

            <div class="ResStart col-lg-2 col-sm-1">
                @reservation.StartTime
            </div>

            <div class="ResEnd col-lg-2 col-sm-1">
                @reservation.EndTime
            </div>
        </div>
    </div>


}   
