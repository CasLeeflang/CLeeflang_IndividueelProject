@model Models.User.LoginModel

@{
    ViewData["Title"] = "View";
}

<h1>Login to your account</h1>


<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Login">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Identifier" class="control-label">Username or Email (case sensitive):</label>
                <input asp-for="Identifier" class="form-control" />
                <span asp-validation-for="Identifier" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password" class="control-label">Password:</label>
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="text-danger mb-2">@ViewBag.LoginError</div>
            <div class="form-group">
                <input type="submit" value="Login" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div style="display:inline-block">

    <div class="mb-2" style="background-color:rgb(0 0 255 / 0.33); border-radius:5px; padding:5px;">Don't have an account yet? <a asp-controller="User" asp-action="Register">Register</a></div>
    <div style="background-color: rgb(255 0 0 / 0.31); border-radius:5px; padding: 5px;">Login as a business? <a asp-controller="BusinessUser" asp-action="Login">Business Login</a></div>
    <a asp-controller="Home" asp-action="Index">Back</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
