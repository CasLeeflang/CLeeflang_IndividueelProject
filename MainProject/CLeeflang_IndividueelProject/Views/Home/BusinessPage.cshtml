@model Logic.BusinessUser.BusinessUserModel

@{
    ViewData["Title"] = "BusinessPage";
}
@using Logic.TimeSlot;

<head>
    <link rel="stylesheet" href="~/css/TimeSlotContainer.css" />
    <script src="~/js/TimeSlot.js"></script>
</head>

<h1>Welcome to @Model.BusinessName!</h1>
<h3>See the available timeslots below to make a reservation</h3>

<div>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.BusinessName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.BusinessName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Info)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Info)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Sector)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Sector)
        </dd>
    </dl>
</div>

<div>
    <a asp-controller="Reservation" asp-action="DatePicker" asp-route-businessId="@Model.Id">Make Reservation</a>
</div>

<div class="mb-5">
    <a asp-action="Index">Back to Home</a>
</div>


